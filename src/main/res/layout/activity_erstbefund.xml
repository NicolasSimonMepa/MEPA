<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="de.app.mepa.erstbefund.Erstbefund"
    android:id="@+id/drawerLayout_Erstbefund"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="de.app.mepa.erstbefund.Erstbefund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/verlauf">
        
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20sp"
            android:id="@+id/tbl_erstbefund_navi"
            android:stretchColumns="1"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TableRow>
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/imgv_before_erstbefund"
                    android:src="@drawable/before"
                    android:clickable="true">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/erstbefund"
                    android:id="@+id/txtv_erstbefund_Label"
                    android:textSize="30sp"
                    android:textColor="#000000"

                    />
            </TableRow>
        </TableLayout>
        
        <RadioGroup android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/tbl_erstbefund_navi"
            android:gravity="center_horizontal"
            android:checkedButton="@+id/rBtn_erstbefund"
            android:id="@+id/tickmarks_erstbefund">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rBtn_pers"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_verletzung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_erkrankung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_massnahmen"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_erstbefund"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_uebergabe"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_notfall"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_bemerkung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/toolbar_eingaben_layout" />
        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tickmarks_erstbefund"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:fillViewport="true"
            tools:context="de.app.mepa.erstbefund.Erstbefund"
            android:id="@+id/scrV_erstbefund"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtv_erstbefund"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/tbl_erstbefund"
                android:gravity="center"
                android:paddingTop="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tblr_erstbefund_bewusstseinslage"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/txtv_bewusstseinslage"
                        android:id="@+id/txtv_erstbefund_bewusstseinslage"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spin_bewusstseinslage"
                        android:spinnerMode="dropdown" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tblr_erstbefund_kreislauf"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/txtv_kreislauf"
                        android:id="@+id/txtv_erstbefund_kreislauf"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spin_kreislauf"
                        android:spinnerMode="dropdown" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tblr_erstbefund_pupillenfunktion_rechts"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/txtv_pupillenfunktion"
                        android:id="@+id/txtv_erstbefund_pupillenfunktion"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spin_pupillenfunktion_links"
                    android:spinnerMode="dropdown" />
                </TableRow>
                <TableRow>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spin_pupillenfunktion_rechts"
                        android:spinnerMode="dropdown" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tblr_erstbefund_ekg"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/txtv_ekg"
                        android:id="@+id/txtv_erstbefund_ekg"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spin_ekg"
                        android:spinnerMode="dropdown" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tblr_erstbefund_schmerzen"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/txtv_schmerzen"
                        android:id="@+id/txtv_erstbefund_schmerzen"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spin_schmerzen"
                        android:spinnerMode="dropdown" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tblr_erstbefund_atmung"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/txtv_atmung"
                        android:id="@+id/txtv_erstbefund_atmung"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spin_atmung"
                        android:spinnerMode="dropdown" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:maxLength="3"
                        android:hint="RR systolisch"
                        android:id="@+id/edtxt_rr_systolisch"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:maxLength="3"
                        android:hint="RR diastolisch"
                        android:id="@+id/edtxt_rr_diastolisch"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:maxLength="3"
                        android:hint="Puls"
                        android:id="@+id/edtxt_puls"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:maxLength="3"
                        android:hint="Atemfrequenz"
                        android:id="@+id/edtxt_atemfrequenz"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:maxLength="3"
                        android:hint="spO2 (in %)"
                        android:id="@+id/edtxt_spo2"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:maxLength="4"
                        android:hint="Blutzucker (in mg/dl)"
                        android:id="@+id/edtxt_blutzucker"
                        android:layout_column="0" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_Erstbefund"
        android:background="#ffeedd"
        android:layout_gravity="start">


        <RelativeLayout
            android:id="@+id/menu_kopfzeile_erstbefund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/festival"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/menu_erstbefund"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_menu_weiss"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/menu_erstbefund"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtv_menu_erstbefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_menu"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/listview_erstbefund"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_kopfzeile_erstbefund"
            android:choiceMode="singleChoice"
            android:background="#ffeedd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
