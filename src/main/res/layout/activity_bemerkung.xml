<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout_Bemerkung"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/verlauf">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20sp"
            android:id="@+id/tbl_bemerkung_navi"
            android:stretchColumns="1">
            <TableRow>
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/imgv_before_bemerkung"
                    android:src="@drawable/before"
                    android:clickable="true">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/bemerkung"
                    android:id="@+id/txtv_bemerkung_Label"
                    android:textSize="30sp"
                    android:textColor="#000000"

                    />
            </TableRow>
        </TableLayout>
        
        <RadioGroup android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/tbl_bemerkung_navi"
            android:gravity="center_horizontal"
            android:checkedButton="@+id/rBtn_bemerkung"
            android:id="@+id/tickmarks_bemerkung">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rBtn_pers"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_verletzung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_erkrankung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_massnahmen"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_erstbefund"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_uebergabe"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_notfall"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_bemerkung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/toolbar_eingaben_layout" />
        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tickmarks_bemerkung"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:fillViewport="true"
            tools:context="de.app.mepa.bemerkung.Bemerkung"
            android:id="@+id/rl_bemerkung"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:inputType="textCapSentences|textMultiLine"
                android:singleLine="false"
                android:maxLength="400"
                android:textColor="#000000"  />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_Bemerkung"
        android:background="#ffeedd"
        android:layout_gravity="start">

        <!-- Kopfzeile -->

        <RelativeLayout
            android:id="@+id/menu_kopfzeile_Bemerkung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/festival"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/menu_Bemerkung"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_menu_weiss"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/menu_Bemerkung"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtv_menu_Bemerkung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_menu"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </RelativeLayout>
        <!-- MenÃ¼punkte -->
        <ListView
            android:id="@+id/listview_Bemerkung"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_kopfzeile_Bemerkung"
            android:choiceMode="singleChoice"
            android:background="#ffeedd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>

