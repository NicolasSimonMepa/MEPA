<!-- DrawerLayout für das Hamburger Menü -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout_Erkrankung"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- von Emile Yoncaova, 15.04.16-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/tbl_erkrankung_navi"
            android:stretchColumns="*">
            <TableRow>
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/imgv_before_erkrankung"
                    android:src="@drawable/before"
                    android:clickable="true">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/erkrankung"
                    android:id="@+id/txtv_erkrankung_Label"
                    android:textSize="30sp"
                    android:textColor="#000000"

                    />
            </TableRow>
        </TableLayout>
        
        <RadioGroup android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/tbl_erkrankung_navi"
            android:gravity="center_horizontal"
            android:checkedButton="@+id/rBtn_erkrankung"
            android:id="@+id/tickmarks_erkrankung">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rBtn_pers"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_verletzung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_erkrankung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_massnahmen"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_erstbefund"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_uebergabe"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_notfall"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rBtn_bemerkung"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/radiobutton_layout"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/toolbar_layout" />
        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tickmarks_erkrankung"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:fillViewport="true"
            tools:context="de.app.mepa.erkrankung.Erkrankung"
            android:id="@+id/scrV_erkrankung">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtv_erkrankung"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/tbl_erkrankung"
        android:gravity="center"
        android:paddingTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_keine"
                android:id="@+id/checkBox"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_alkoholisiert"
                android:id="@+id/checkBox2"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_uebelkeit"
                android:id="@+id/checkBox3"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_schwindel"
                android:id="@+id/checkBox4"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_herz_kreislauf"
                android:id="@+id/checkBox5"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_hitzeschlag"
                android:id="@+id/checkBox6"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_hitzeerschoepfung"
                android:id="@+id/checkBox7"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_vergiftung"
                android:id="@+id/checkBox8"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_atmung"
                android:id="@+id/checkBox9"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_unterkuehlung"
                android:id="@+id/checkBox10"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_stoffwechsel"
                android:id="@+id/checkBox11"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_neurologie"
                android:id="@+id/checkBox12"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_gynaekologie"
                android:id="@+id/checkBox13"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_psychatrie"
                android:id="@+id/checkBox14"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_kindernotfall"
                android:id="@+id/checkBox15"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_geburtshilfe"
                android:id="@+id/checkBox16"
                android:checked="false"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtv_sonstiges"
                android:id="@+id/checkBox20"
                android:checked="false"
                android:textSize="20sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/sonstiges_erkrankung" />
        </TableRow>
    </TableLayout>
</ScrollView>
    </RelativeLayout>
    <!-- von Vivien Stumpe, 10.04.16 -->
    <!-- Hamburger Menü - Drawer Navigation -->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_Erkrankung"
        android:background="#ffeedd"
        android:layout_gravity="start">

        <!-- Kopfzeile -->

        <RelativeLayout
            android:id="@+id/menu_kopfzeile_Erkrankung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/festival"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/menu_Erkrankung"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_menu_weiss"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/menu_Erkrankung"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtv_menu_Erkrankung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_menu"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </RelativeLayout>
        <!-- Menüpunkte -->
        <ListView
            android:id="@+id/listview_Erkrankung"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_kopfzeile_Erkrankung"
            android:choiceMode="singleChoice"
            android:background="#ffeedd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
