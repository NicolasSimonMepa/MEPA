        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtv_stoffwechsel"
        android:id="@+id/checkBox12"
        android:onClick="selectItem"
        android:layout_below="@+id/checkBox10"
        android:layout_alignLeft="@+id/checkBox10"
        android:layout_alignStart="@+id/checkBox10"
        android:checked="false"
        android:textSize="20sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/checkBox11"
        android:layout_alignRight="@+id/btn_menu"
        android:layout_alignEnd="@+id/btn_menu"
        android:layout_toRightOf="@+id/checkBox6"
        android:layout_toEndOf="@+id/checkBox6" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_fertig"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignRight="@+id/btn_menu"
        android:layout_alignEnd="@+id/btn_menu"
        android:onClick="finalSelection" />
</RelativeLayout>
