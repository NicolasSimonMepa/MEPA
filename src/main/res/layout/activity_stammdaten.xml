<!-- von Vivien Stumpe am 03.04.16 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="de.app.mepa.stammdaten.Stammdaten"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verlauf">
    <!-- von Vivien Stumpe, 12.04.16 -->
    <!-- Layout für die Toolbar hinzufügen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar_layout"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtv_stammdaten"
        android:id="@+id/txtv_stammdaten"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_stammdaten"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:id="@+id/tbl_stammdaten"
        android:gravity="center"
        android:stretchColumns="1"
        android:focusable="true" android:focusableInTouchMode="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tblr_kreisverband"
            android:layout_marginBottom="5dp">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:src="@drawable/kreisverband"
                android:id="@+id/imgv_kreisverband" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etxt_kreisverband"
                android:hint="@string/txtv_kreisverband"
                android:layout_column="1"
                android:typeface="normal"
                android:ems="10"
                android:inputType="textCapSentences|textMultiLine"
                android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                android:singleLine="false"
                android:maxLines="2"
                android:maxLength="55"
                android:enabled="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tblr_ortsverein"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:src="@drawable/ortsverein"
                android:id="@+id/imgv_ortsverein" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etxt_ortsverein"
                android:hint="@string/txtv_ortsverein"
                android:layout_column="1"
                android:ems="10"
                android:inputType="textCapSentences|textMultiLine"
                android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                android:singleLine="false"
                android:maxLines="2"
                android:maxLength="55"
                android:enabled="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tblr_ort"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:src="@drawable/ort"
                android:id="@+id/imgv_ort" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etxt_ort"
                android:hint="@string/txtv_ort"
                android:layout_column="1"
                android:ems="10"
                android:inputType="textCapSentences|textMultiLine"
                android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                android:singleLine="false"
                android:maxLines="2"
                android:maxLength="55"
                android:enabled="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tblr_veranstaltung"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:src="@drawable/birthday"
                android:id="@+id/imgv_veranstaltung" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etxt_veranstaltung"
                android:hint="@string/txtv_veranstaltung"
                android:layout_column="1"
                android:ems="10"
                android:inputType="textCapSentences|textMultiLine"
                android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                android:singleLine="false"
                android:maxLines="2"
                android:maxLength="55"
                android:enabled="false"/>

        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tblr_veranstaltung_datum"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:src="@drawable/veranstaltung"
            android:id="@+id/imgv_veranstaltung_datum" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etxt_veranstaltung_datum"
            android:hint="@string/txtv_veranstaltung_datum"
            android:layout_column="1"
            android:ems="10"
            android:focusable="false"
            android:clickable="true"
            android:enabled="false"/>

    </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnl_stammdaten_check"
        android:layout_below="@id/tbl_stammdaten"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cck_hilfsstelle"
            android:text="@string/txtv_hilfsstelle"
            android:textSize="20sp"
            android:enabled="false"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cck_mosan"
            android:text="@string/txtv_mosan"
            android:textSize="20sp"
            android:enabled="false"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cck_sanw"
            android:text="@string/txtv_sanw"
            android:textSize="20sp"
            android:enabled="false"/>
    </LinearLayout>


 <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnl_stammdaten_check"
        android:id="@+id/lnl_stammdaten_buttons"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_speichern"
            android:id="@+id/btn_speichern_stammd"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="#137922"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="false"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:minWidth="30dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_verwerfen"
            android:id="@+id/btn_verwerfen_stammd"
            android:background="#ee0f0f"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
<!-- von Vivien Stumpe, 10.04.16 -->
    <!-- Hamburger Menü - Drawer Navigation -->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_Stammdaten"
        android:background="#ffeedd"
        android:layout_gravity="start">

        <!-- Kopfzeile -->

        <RelativeLayout
            android:id="@+id/menu_kopfzeile_stammdaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/festival">

            <ImageView
                android:id="@+id/menu_stammdaten"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_menu_weiss"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/menu_stammdaten"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtv_menu_stammdaten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_menu"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:textColor="@color/weiss"/>

            </LinearLayout>
        </RelativeLayout>
        <!-- Menüpunkte -->
        <ListView
            android:id="@+id/listview_stammdaten"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_kopfzeile_stammdaten"
            android:choiceMode="singleChoice"
            android:background="#ffeedd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
