<?xml version="1.0" encoding="utf-8"?>
<!-- zuletzt geändert von Vivien Stumpe, 10.05.16 -->
<!-- von Vivien Stumpe, 08.04.16 -->
<!-- DrawerLayout für das Hamburger Menü -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout_Falleingabe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- von Vivien Stumpe, 01.04.16 -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/verlauf"
        tools:context="de.app.mepa.falleingabe.Falleingabe">
        <!-- von Vivien Stumpe, 12.04.16 -->
        <!-- Layout für die Toolbar hinzufügen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lnl_toolbar">
            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/toolbar_layout"/>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txtv_falleingabe"
            android:id="@+id/txtv_falleingabe_fallein"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="30sp"
            android:textColor="#000000"
            android:gravity="center" />
    <!-- von Vivien Stumpe, 10.05.16 -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:fillViewport="true"
        tools:context="de.app.mepa.falleingabe.Falleingabe"
        android:id="@+id/scrV_falleingabe"
        android:layout_marginTop="50dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <!-- von Vivien Stumpe, 14.04.16 -->
        <!-- Kachel Menü -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="*"
            android:id="@+id/tbl_falleingabe"
            android:layout_marginTop="60dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_falleingabe_1"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/txtv_fallein_pers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtv_person"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
                <TextView
                    android:id="@+id/txtv_fallein_verletzung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verletzung"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_falleingabe_2"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/txtv_fallein_erkrankung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtv_erkrankung"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
                <TextView
                    android:id="@+id/txtv_fallein_maßnahmen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtv_maßnahmen"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_falleingabe_3"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/txtv_fallein_erstbef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtv_erstbefund"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
                <TextView
                    android:id="@+id/txtv_fallein_uebergabe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtv_uebergabe"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_falleingabe_4"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/txtv_fallein_notfall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtv_notfallsituation"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
                <TextView
                    android:id="@+id/txtv_fallein_bemerkung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtv_bemerkung"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true" />
            </TableRow>
        </TableLayout>

<!-- von Vivien Stumpe, 02.05.16
Buttons zum Verwerfen und Speichern -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tbl_falleingabe"
            android:id="@+id/lnl_falleingabe_buttons"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_speichern"
                android:id="@+id/btn_speichern_fallein"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#137922"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="false"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:minWidth="30dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_verwerfen"
                android:id="@+id/btn_verwerfen_fallein"
                android:background="#ee0f0f"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_weight="1" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgv_animation"
            android:src="@drawable/animation"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</ScrollView>
    </RelativeLayout>

    <!-- von Vivien Stumpe, 08.04.16 -->
    <!-- Hamburger Menü - Drawer Navigation -->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_Falleingabe"
        android:background="#ffeedd"
        android:layout_gravity="start">

        <!-- Kopfzeile -->

        <RelativeLayout
            android:id="@+id/menu_kopfzeile_fallein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/festival"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/menu_fallein"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_menu_weiss"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/menu_fallein"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtv_menu_falleingabe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_menu"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </RelativeLayout>
        <!-- Menüpunkte -->
        <ListView
            android:id="@+id/listview_falleingabe"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_kopfzeile_fallein"
            android:choiceMode="singleChoice"
            android:background="#ffeedd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
