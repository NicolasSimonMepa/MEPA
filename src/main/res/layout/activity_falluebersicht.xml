              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"> -->

    <!-- von Vivien Stumpe, 09.04.16 , Nicolas übernommen 10.04.16-->
    <!-- DrawerLayout für das Hamburger Menü -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout_Falluebersicht"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_centerInParent="true"
                    tools:context="de.app.mepa.falluebersicht.Falluebersicht">

<!--von Nicolas Simon 25.03.16 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/txtv_falluebersicht"
                android:id="@+id/txtv_ueberschrift"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="false"
                android:gravity="top"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_menu_stammd"
                android:id="@+id/btn_menu_fallueb"
                android:layout_below="@+id/txtv_stammdaten"
                android:layout_alignRight="@+id/txtv_stammdaten"
                android:layout_alignEnd="@+id/txtv_stammdaten"
                android:background="#2e5897"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="333dp"
                    android:id="@+id/listView"
                    android:layout_weight="0.25"
                    />

                <TableRow
                    android:layout_width="30dp"
                    android:layout_height="101dp"
                    android:id="@+id/tbrow">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txtv_speichern"
                        android:id="@+id/btn_speichern_fallueb"
                        android:textColor="#ffffff"
                        android:background="#3cb427"
                        android:layout_marginRight="50dp"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txtv_loeschen"
                        android:id="@+id/btn_verwerfen_fallueb"
                        android:layout_column="7"
                        android:background="#ff0101"
                        android:textColor="#fffefe"
                        android:layout_marginLeft="100dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>


    </RelativeLayout>

    <!-- von Vivien Stumpe, 09.04.16 , Übernommen von Nicolas 10.04.16-->
    <!-- Hamburger Menü - Drawer Navigation -->
<RelativeLayout
android:layout_width="250dp"
android:layout_height="match_parent"
android:id="@+id/drawer_falluebersicht"
android:background="#ffeedd"
android:layout_gravity="start">

<!-- Kopfzeile -->

<RelativeLayout
    android:id="@+id/menu_kopfzeile_falluebersicht"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/menu_falluebersicht"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_menu"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/menu_falluebersicht"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtv_menu_falluebersicht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:textColor="#000000"/>
    </LinearLayout>
</RelativeLayout>
<!-- Menüpunkte -->
<ListView
    android:id="@+id/listview_falluebersicht"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_below="@+id/menu_kopfzeile_falluebersicht"
    android:choiceMode="singleChoice"
    android:background="#ffeedd"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp" />
</RelativeLayout>

</android.support.v4.widget.DrawerLayout>
