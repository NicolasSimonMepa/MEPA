<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="de.app.mepa.stammdaten.Stammdaten_OnBoard"
    android:background="@drawable/verlauf">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <!-- von Vivien Stumpe, 12.04.16 -->
        <!-- Layout für die Toolbar hinzufügen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/toolbar_onboard_layout"/>
        </LinearLayout>
    <!-- von Vivien Stumpe, 26.04.16
            Layout für die Navigation mit zurück Pfeil -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/tbl_stammdaten_onb_navi"
        android:stretchColumns="1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TableRow>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:id="@+id/imgv_before_stammd_onb"
                android:src="@drawable/before"
                android:clickable="true">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/txtv_stammdaten"
                android:id="@+id/txtv_stammdaten_onb"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:textSize="30sp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </TableRow>
    </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tbl_stammdaten_onb_navi"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:id="@+id/tbl_stammdaten_onb"
            android:gravity="center"
            android:stretchColumns="1"
            android:focusable="true" android:focusableInTouchMode="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_kreisverband_onb"
                android:layout_marginBottom="5dp">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:src="@drawable/kreisverband"
                    android:id="@+id/imgv_kreisverband_onb" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxt_kreisverband_onb"
                    android:hint="@string/txtv_kreisverband"
                    android:layout_column="1"
                    android:typeface="normal"
                    android:ems="10"
                    android:inputType="textCapSentences|textMultiLine"
                    android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:maxLength="55"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_ortsverein_onb"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:src="@drawable/ortsverein"
                    android:id="@+id/imgv_ortsverein_onb" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxt_ortsverein_onb"
                    android:hint="@string/txtv_ortsverein"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="textCapSentences|textMultiLine"
                    android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:maxLength="55"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_ort_onb"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:src="@drawable/ort"
                    android:id="@+id/imgv_ort_onb" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxt_ort_onb"
                    android:hint="@string/txtv_ort"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="textCapSentences|textMultiLine"
                    android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:maxLength="55"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_veranstaltung_onb"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:src="@drawable/veranstaltung"
                    android:id="@+id/imgv_veranstaltung_onb" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxt_veranstaltung_onb"
                    android:hint="@string/txtv_veranstaltung"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="textCapSentences|textMultiLine"
                    android:digits="aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZäüöÄÜÖ-,.;\n: /?\\"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:maxLength="55"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tblr_veranstaltung_datum_onb"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:src="@drawable/birthday"
                    android:id="@+id/imgv_veranstaltung_datum_onb" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxt_veranstaltung_datum_onb"
                    android:hint="@string/txtv_veranstaltung_datum"
                    android:layout_column="1"
                    android:ems="10"
                    android:focusable="false"
                    android:clickable="true"/>

            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lnl_stammdaten_check_onb"
            android:layout_below="@id/tbl_stammdaten_onb"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cck_hilfsstelle_onb"
                android:text="@string/txtv_hilfsstelle"
                android:textSize="20sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cck_mosan_onb"
                android:text="@string/txtv_mosan"
                android:textSize="20sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cck_sanw_onb"
                android:text="@string/txtv_sanw"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnl_stammdaten_check_onb"
            android:id="@+id/lnl_stammdaten_buttons_onb"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_speichern"
                android:id="@+id/btn_speichern_stammd_onb"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#137922"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="false"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:minWidth="30dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_verwerfen"
                android:id="@+id/btn_verwerfen_stammd_onb"
                android:background="#ee0f0f"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
